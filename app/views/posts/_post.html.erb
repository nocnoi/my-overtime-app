<tr>
	<td>
	  <%= post.id %>
	</td>
	<td>
	  <%= post.date %>
	</td>
	<td>
	  <%= post.user.full_name %>
	</td>
	<td>
	  <%= truncate(post.rationale) %>
	</td>
	<td>
	  <%= link_to 'Edit', edit_post_path(post), id: "edit_#{post.id}" %>
	</td>
	<td>
	  <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Do you want to delete this post?'}, id: "delete_#{post.id}" %>
	</td>
</tr>